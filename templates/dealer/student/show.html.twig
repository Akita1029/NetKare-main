{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ student.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ student.roles ? student.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ student.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ student.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dealer_student_index') }}">back to list</a>

    <a href="{{ path('dealer_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('dealer/student/_delete_form.html.twig') }}
{% endblock %}
