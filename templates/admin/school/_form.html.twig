{{ form_start(form, {'attr': {'class': 'mb-3'}}) }}
    {{ form_row(form.owner) }}
    {{ form_row(form.name) }}
    <div class="mb-3">
        {{ form_label(form.logo, null, {'label_attr': {'class': 'form-label'}}) }}
        <div class="form-control">
            <div class="flex items-center">
                {% if school.logoFilename %}
                    <img src="{{ asset('uploads/schools/' ~ school.logoFilename) }}" alt="" class="h-16 mr-3">
                {% endif %}
                {{ form_widget(form.logo) }}
            </div>
        </div>
    </div>
    {{ form_row(form.address) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.phoneGsm) }}
    {{ form_row(form.fax) }}
    {{ form_row(form.note) }}
    <button class="btn btn-primary">{% trans %}buttons.save.label{% endtrans %}</button>
{{ form_end(form) }}
