{% extends 'base.html.twig' %}

{% block title %}Yearbook{% endblock %}

{% block body %}
    <h1>Yearbook</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ yearbook.id }}</td>
            </tr>
            <tr>
                <th>StartsAt</th>
                <td>{{ yearbook.startsAt ? yearbook.startsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndsAt</th>
                <td>{{ yearbook.endsAt ? yearbook.endsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Memoir</th>
                <td>{{ yearbook.memoir }}</td>
            </tr>
            <tr>
                <th>ImageUpload</th>
                <td>{{ yearbook.imageUpload ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageUploadLimit</th>
                <td>{{ yearbook.imageUploadLimit }}</td>
            </tr>
            <tr>
                <th>Youtube</th>
                <td>{{ yearbook.youtube ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>QrPrefix</th>
                <td>{{ yearbook.qrPrefix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_yearbook_index') }}">back to list</a>

    <a href="{{ path('app_admin_yearbook_edit', {'id': yearbook.id}) }}">edit</a>

    {{ include('admin/yearbook/_delete_form.html.twig') }}
{% endblock %}
