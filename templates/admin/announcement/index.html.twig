{% extends 'admin/layout.html.twig' %}

{% set title = 'announcement.titles.index'|trans %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="flex justify-between mb-5">
		<div>
			<h1 class="mb-5">{{ title }}</h1>
		</div>
		<div>
			<a href="{{ path('admin_announcement_new') }}" class="btn btn-primary">{% trans %}buttons.new.label{% endtrans %}</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>{% trans %}announcement.labels.image{% endtrans %}</th>
				<th>{% trans %}announcement.labels.title{% endtrans %}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for announcement in announcements %}
				<tr>
					<td><img src="{{ asset('uploads/announcements/' ~ announcement.imageFilename) }}" alt="{{ announcement.title }}" class="h-16"></td>
					<td>{{ announcement.title }}</td>
					<td class="text-right">
						<a href="{{ path('admin_announcement_edit', {'id': announcement.id}) }}" class="btn btn-light">{% trans %}buttons.edit.label{% endtrans %}</a>
						{{ include('admin/announcement/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">{% trans %}no_record{% endtrans %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
