{% extends 'admin/layout.html.twig' %}

{% set title = 'category.titles.index'|trans %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="flex justify-between mb-5">
		<div>
			<h1>{{ title }}</h1>
		</div>
		<div>
			<a href="{{ path('admin_category_new') }}" class="btn btn-primary">{% trans %}buttons.new.label{% endtrans %}</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>{% trans %}category.labels.title{% endtrans %}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.title }}</td>
					<td class="text-right">
						<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-light">{% trans %}buttons.edit.label{% endtrans %}</a>
						{{ include('admin/category/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">{% trans %}no_record{% endtrans %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
